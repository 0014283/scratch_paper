
<h1>ユーザー一覧</h1>
<table  class="table-hover table orange">
	<thead>
		<tr>
			<th>ユーザー画像</th>
			<th>ユーザー名</th>
			<th>自己紹介文</th>
			<th>メールアドレス</th>
			<th>フォロー数</th>
			<th>フォロワー数</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= attachment_image_tag user, :user_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image100x100.jpg" %></td>
			<td><%= user.name %></td>
			<td><%= user.content %></td>
			<td><%= user.email %></td>
			<td><%= user.followings.count %></td>
			<td><%= user.followers.count %></td>
			<td><%= link_to "退会", user_path(user.id), class: 'btn btn-danger', method: :delete, "data-confirm" => "本当に退会させますか？" %></td>
		</tr>
		<% end %>
	</tbody>
</table>