
<div  class="center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div  class="user_d d_in">
    <span  class="paper_pin pin_b"></span>
    <P><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class:"edit" %></P>
    <P><%= f.password_field :password,  autocomplete: "off", placeholder: "パスワード", class:"edit" %></P>
  </div>

  <div class="actions">
    <h2><%= f.submit "ログイン" %></h2>
  </div>
  <% end %>
</div>

