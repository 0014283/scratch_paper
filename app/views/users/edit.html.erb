<div class="users_signup">

<h4><strong> 登録情報変更 </strong></h4>
<%= form_for(@user) do |f| %>

  <div class="field">
    <p> ユーザー名 </p>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザー名" %>
  </div>
  <div class="field">
    <p> メールアドレス </p>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "ユーザー名" %>
  </div>

  <div class="field">
    <div> 自己紹介文 </div>
    <%= f.text_area :content, autocomplete: "content", placeholder: "自己紹介文" %>
  </div>

  <div class="field">
  <%= f.attachment_field :user_image %>
  </div>

  <div class="field">
    <div> パスワード（半角英数字6桁以上） </div>
    <%= f.text_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <p> パスワード確認 </p>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "上記の内容で変更する", class:"btn btn-danger" %>
  </div>
  <% end %>

</div>
