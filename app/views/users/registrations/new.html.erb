
<div  class="center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <h2><%= devise_error_messages! %></h2>
  <div class="h h_in">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: "ユーザー名" %>
  </div>
  <div  class="user_d d_in">
    <span  class="paper_pin pin_b"></span>
    <P><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class:"edit" %></P>
    <P><%= f.password_field :password,  autocomplete: "off", placeholder: "パスワード（半角英数字6桁以上）", class:"edit" %></P>
    <P><%= f.password_field :password_confirmation,  autocomplete: "off", placeholder: "パスワード確認", class:"edit" %></P>
  </div>

  <div class="actions">
    <h2><%= f.submit "新規登録" %></h2>
  </div>
  <% end %>
</div>

