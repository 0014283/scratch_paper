
<%= @paper.title %>

<%= @paper.content %>

<% @genres.each do |genre| %><% if @paper.genre_id == genre.id %><%= genre.name %><% end %><% end %>

<% unless @paper.start_date.blank? %><%= @paper.start_date.strftime("%Y年%-m月%-d日") %><% end %>
<% if @paper.start_date.present? %>~
<% elsif @paper.end_date.present? %>~
<% end %>
<% unless @paper.end_date.blank? %><%= @paper.end_date.strftime("%Y年%-m月%-d日") %><% end %>

<%= @paper.user.name %>

<% if user_signed_in? %>
	<% if current_user.likes.find_by(paper_id: @paper.id) %>
			<%= render 'likes/like_destroy' %>
		<% else %>
			<%= render 'likes/like_create' %>
	<% end %>
	<% else %>
		<%= link_to new_user_session_path do %><span class="glyphicon glyphicon-heart black" aria-hidden="true"><%= @paper.likes.count %><% end %>
<% end %>

<%= link_to "削除", paper_path(@paper.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>